{
    "name": "exileed/yii2-monolog2",
    "type": "yii2-extension",
    "description": "Monolog2 extension for Yii2",
    "license": "MIT",
    "authors": [
        {
            "name": "Juuso Leinonen",
            "email": "leinonen.juuso@gmail.com"
        },
        {
            "name": "Dmitriy Kuts (ExileeD)",
            "email": "me@exileed.com"
        }
    ],
    "require": {
        "php": "^7.4 || ^8.0",
        "monolog/monolog": "^2.0",
        "yiisoft/yii2": "~2.0.11",
        "tightenco/collect": "^5.8 || ^6.0 || ^7.0 ||^8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "mockery/mockery": "^1.0",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "autoload": {
        "psr-4": {
            "leinonen\\Yii2Monolog\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "leinonen\\Yii2Monolog\\Tests\\": "tests/"
        }
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ]
}
